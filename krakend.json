{
  "$schema": "https://www.krakend.io/schema/v3.json",
  "version": 3,
  "name": "KrakenD - API Gateway",
  "timeout": "3000ms",
  "cache_ttl": "300s",
  "output_encoding": "json",
  "port": 8080,
  "sequential_start": false,
  "endpoints": [
    {
      "endpoint": "/kraken/bookauthor/{id}",
      "method": "GET",
      "output_encoding": "json",
      "backend": [
        {
          "url_pattern": "/book/{id}",
          "encoding": "json",
          "sd": "static",
          "method": "GET",
          "disable_host_sanitize": false,
          "host": [
            "http://host.docker.internal:8081"
          ]
        },
        {
          "url_pattern": "/author/{resp0_authorId}",
          "encoding": "json",
          "sd": "static",
          "method": "GET",
          "host": [
            "http://host.docker.internal:8082"
          ],
          "disable_host_sanitize": false
        }
      ],
      "extra_config": {
        "proxy": {
          "sequential": true
        }
      }
    },
    {
      "endpoint": "/kraken/book/",
      "method": "POST",
      "output_encoding": "json",
      "backend": [
        {
          "url_pattern": "/book/",
          "encoding": "json",
          "sd": "static",
          "method": "POST",
          "host": [
            "http://host.docker.internal:8081"
          ],
          "disable_host_sanitize": false
        }
      ],
      "input_query_strings": [
        "title",
        "authorId"
      ]
    },
    {
      "endpoint": "/kraken/author/",
      "method": "POST",
      "output_encoding": "json",
      "backend": [
        {
          "url_pattern": "/author/",
          "encoding": "json",
          "sd": "static",
          "method": "POST",
          "host": [
            "http://host.docker.internal:8082"
          ],
          "disable_host_sanitize": false
        }
      ],
      "input_query_strings": [
        "name",
        "surname",
        "country"
      ]
    },
    {
      "endpoint": "/kraken/book/{id}",
      "method": "GET",
      "output_encoding": "json",
      "backend": [
        {
          "url_pattern": "/book/{id}",
          "encoding": "json",
          "sd": "static",
          "method": "GET",
          "host": [
            "http://host.docker.internal:8081"
          ],
          "disable_host_sanitize": false
        }
      ]
    },
    {
      "endpoint": "/kraken/author/{id}",
      "method": "GET",
      "output_encoding": "json",
      "backend": [
        {
          "url_pattern": "/author/{id}",
          "encoding": "json",
          "sd": "static",
          "method": "GET",
          "host": [
            "http://host.docker.internal:8082"
          ],
          "disable_host_sanitize": false
        }
      ]
    }

  ]
}